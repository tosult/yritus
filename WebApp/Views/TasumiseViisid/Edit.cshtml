@model Domain.App.TasumiseViis

@{
    ViewData["Title"] = "Muuda";
}

<h1>Muuda</h1>

<h4>Makseviis</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ViisNimetus" class="control-label"></label>
                <input asp-for="ViisNimetus" class="form-control" />
                <span asp-validation-for="ViisNimetus" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <input type="submit" value="Salvesta" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Tagasi</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
